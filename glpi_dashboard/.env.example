# Configurações do Flask
FLASK_ENV=dev
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here
PORT=5000
HOST=0.0.0.0

# Configurações do GLPI
GLPI_URL=http://your-glpi-server/glpi/apirest.php
GLPI_USER_TOKEN=your-glpi-user-token
GLPI_APP_TOKEN=your-glpi-app-token

# Configurações da API Backend
BACKEND_API_URL=http://localhost:8000
API_KEY=your-api-key
API_TIMEOUT=30

# Configurações de Logging
LOG_LEVEL=INFO

# Configurações de Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=glpi_dashboard:

# Configurações de Performance
PERFORMANCE_TARGET_P95=300
MAX_CONTENT_LENGTH=16777216
RATE_LIMIT_PER_MINUTE=60

# Configurações de Observabilidade
# Prometheus Gateway para coleta de métricas
PROMETHEUS_GATEWAY_URL=http://localhost:9091
PROMETHEUS_JOB_NAME=glpi_dashboard

# Logging Estruturado
STRUCTURED_LOGGING=True
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Thresholds de Alertas
# Threshold de tempo de resposta em milissegundos
ALERT_RESPONSE_TIME_THRESHOLD=300
# Threshold de taxa de erro (0.05 = 5%)
ALERT_ERROR_RATE_THRESHOLD=0.05
# Threshold de alerta para tickets zerados em segundos
ALERT_ZERO_TICKETS_THRESHOLD=60