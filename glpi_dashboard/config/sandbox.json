{
  "environment": "sandbox",
  "version": "1.0.0",
  "description": "Configuração do sandbox para testes de integração IA - GLPI Dashboard",
  
  "ai_models": {
    "primary": "claude-3-sonnet",
    "fallback": "gpt-4",
    "local_model": null,
    "api_settings": {
      "timeout": 30,
      "max_tokens": 4000,
      "temperature": 0.1
    }
  },
  
  "test_settings": {
    "timeout": 30,
    "max_retries": 3,
    "parallel_tests": 4,
    "retry_delay": 1.0,
    "fail_fast": false,
    "verbose_output": true
  },
  
  "mock_data": {
    "glpi_url": "http://localhost:8080/mock-glpi",
    "redis_url": "redis://localhost:6379/15",
    "database_url": "sqlite:///sandbox_test.db",
    "use_real_apis": false,
    "mock_latency": {
      "min_ms": 50,
      "max_ms": 500,
      "average_ms": 200
    }
  },
  
  "metrics": {
    "accuracy_threshold": 0.85,
    "performance_threshold": 2.0,
    "quality_threshold": 0.90,
    "success_rate_threshold": 0.80,
    "code_coverage_threshold": 0.75
  },
  
  "test_categories": {
    "development": {
      "enabled": true,
      "weight": 1.0,
      "test_cases": [
        "api_endpoint_creation",
        "react_component_creation",
        "service_integration",
        "error_handling",
        "validation_logic"
      ]
    },
    "debug": {
      "enabled": true,
      "weight": 1.2,
      "test_cases": [
        "performance_analysis",
        "error_diagnosis",
        "log_analysis",
        "bottleneck_identification"
      ]
    },
    "refactoring": {
      "enabled": true,
      "weight": 0.8,
      "test_cases": [
        "code_optimization",
        "architecture_improvement",
        "pattern_application",
        "dependency_management"
      ]
    },
    "documentation": {
      "enabled": true,
      "weight": 0.6,
      "test_cases": [
        "api_documentation",
        "code_comments",
        "readme_generation",
        "architecture_docs"
      ]
    }
  },
  
  "prompt_templates": {
    "base_context": {
      "project_name": "GLPI Dashboard",
      "tech_stack": "Flask + React/TypeScript",
      "architecture": "Clean Architecture",
      "patterns": ["RESTful APIs", "TDD", "Observability"]
    },
    "code_standards": {
      "python": {
        "style_guide": "PEP8",
        "linting": "flake8",
        "formatting": "black",
        "type_checking": "mypy"
      },
      "typescript": {
        "style_guide": "ESLint",
        "formatting": "Prettier",
        "type_checking": "strict"
      }
    },
    "required_elements": {
      "api_endpoint": [
        "@api_bp.route",
        "@observability_logger.monitor_endpoint()",
        "correlation_id",
        "ResponseFormatter",
        "error handling"
      ],
      "react_component": [
        "interface Props",
        "React.FC",
        "TypeScript",
        "accessibility",
        "error boundaries"
      ],
      "service_class": [
        "error handling",
        "logging",
        "caching",
        "type hints",
        "documentation"
      ]
    }
  },
  
  "performance_benchmarks": {
    "api_response_time": {
      "excellent": 100,
      "good": 300,
      "acceptable": 1000,
      "poor": 2000
    },
    "code_generation_time": {
      "excellent": 2,
      "good": 5,
      "acceptable": 10,
      "poor": 20
    },
    "throughput": {
      "min_ops_per_second": 50,
      "target_ops_per_second": 100,
      "max_ops_per_second": 200
    }
  },
  
  "reporting": {
    "output_formats": ["json", "html", "markdown"],
    "include_details": true,
    "include_metrics": true,
    "include_recommendations": true,
    "auto_open_report": false,
    "save_history": true,
    "max_history_files": 50
  },
  
  "security": {
    "sandbox_isolation": true,
    "network_restrictions": {
      "allowed_domains": [
        "localhost",
        "127.0.0.1",
        "api.openai.com",
        "api.anthropic.com"
      ],
      "blocked_ports": [22, 23, 3389],
      "max_request_size": "10MB"
    },
    "code_execution": {
      "allow_file_system_access": false,
      "allow_network_access": false,
      "allow_subprocess": false,
      "timeout_seconds": 10
    }
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_output": true,
    "console_output": true,
    "log_file": "sandbox.log",
    "max_file_size": "10MB",
    "backup_count": 5
  },
  
  "integrations": {
    "prometheus": {
      "enabled": false,
      "endpoint": "http://localhost:9090",
      "metrics_prefix": "sandbox_"
    },
    "grafana": {
      "enabled": false,
      "dashboard_url": "http://localhost:3000"
    },
    "slack": {
      "enabled": false,
      "webhook_url": null,
      "notify_on_failure": true,
      "notify_on_success": false
    }
  },
  
  "experimental": {
    "auto_fix_enabled": false,
    "learning_mode": true,
    "adaptive_thresholds": false,
    "ml_model_training": false
  }
}